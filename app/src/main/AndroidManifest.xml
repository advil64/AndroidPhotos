<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidphotos">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPhotos">
        <activity
            android:name=".AddPhoto"
            android:label="@string/title_activity_add_photo"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar"></activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity
            android:name=".OpenAlbum"
            android:label="@string/title_activity_open_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity
            android:name=".RenameAlbum"
            android:label="@string/title_activity_rename_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity
            android:name=".CreateAlbum"
            android:label="@string/title_activity_create_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
    </application>

</manifest>