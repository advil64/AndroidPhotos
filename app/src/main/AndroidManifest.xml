<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidphotos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidPhotos">
        <activity
            android:name=".Search"
            android:label="@string/title_activity_search"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar"></activity>
        <activity
            android:name=".OpenAlbum"
            android:label="@string/title_activity_open_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity
            android:name=".RenameAlbum"
            android:label="@string/title_activity_rename_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity
            android:name=".CreateAlbum"
            android:label="@string/title_activity_create_album"
            android:theme="@style/Theme.AndroidPhotos.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>